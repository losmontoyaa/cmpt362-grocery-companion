<resources>
    <!-- Use stable MaterialComponents theme -->
    <style name="Theme.GroceryCompanion" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- System bars -->
        <item name="android:statusBarColor">@color/brand_primary</item>
        <item name="android:navigationBarColor">@color/surface_card</item>

        <!-- Brand -->
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorSecondary">@color/brand_secondary</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/surface_bg</item>
    </style>

    <!-- Card style for MaterialCardView -->
    <style name="Widget.GC.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeColor">@color/surface_variant</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:backgroundTint">@color/surface_card</item>
    </style>

    <!-- Filled button style -->
    <style name="Widget.GC.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/brand_secondary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

</resources>
