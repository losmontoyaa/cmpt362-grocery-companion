<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="brand_accent">#FACC15</color>
    <color name="brand_primary">#16A34A</color>
    <color name="brand_secondary">#7C3AED</color>
    <color name="surface_bg">#FAFAFA</color>
    <color name="surface_card">#FFFFFF</color>
    <color name="surface_variant">#E7E7E7</color>
    <color name="text_primary">#111827</color>
    <color name="text_secondary">#6B7280</color>
    <color name="white">#FFFFFF</color>
    <string name="app_name">GroceryCompanion</string>
    <style name="Theme.GroceryCompanion" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        
        <item name="android:statusBarColor">@color/brand_primary</item>
        <item name="android:navigationBarColor">@color/surface_card</item>

        
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorSecondary">@color/brand_secondary</item>

        
        <item name="android:windowBackground">@color/surface_bg</item>
    </style>
    <style name="Widget.GC.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/brand_secondary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    <style name="Widget.GC.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeColor">@color/surface_variant</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:backgroundTint">@color/surface_card</item>
    </style>
</resources>